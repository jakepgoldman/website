<!-- Education -->
<div class="marg-bot-2">
  <h4 class="title">Education</h4>
  {{#each education}}
    {{> education this}}
  {{/each}}
</div>

<!-- Recent projects -->
{{#if projects}}
  <div>
    <h4 class="title">Recent Projects</h4>
    {{#each projects}}
      {{> project this}}
    {{/each}}
  </div>
  <a href="/projects" class="btn btn-primary marg-bot-1">
    View projects
  </a>
{{/if}}

<!-- Experience -->
<div class="marg-bot-2">
  <h4 class="title">Experience</h4>
  {{#each experiences}}
    {{> experience this}}
  {{/each}}
</div>

