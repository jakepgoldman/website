<!-- Overview -->
<div class="marg-bot-1">
  <div class="card has-bg" style="background-image: url(/img/art-backing-01.svg)" id="hero">
    <div class="flex-container no-flex-mobile">
      <div class="profile-picture-wrapper">
        <img src="/img/me.jpg" class="profile-picture" alt="Jake Goldman Profile Picture">
      </div>
      <div class="flex">
        <h1>Hi, I'm Jake</h1>
        <p>I want to leverage tech to help people learn more and live better. I study computer science and business analytics in the <a href="https://fisher.wharton.upenn.edu/">M&T program at UPenn,</a> and spend my free time <a href="http://join-bunker.co">developing mobile apps,</a> <a href="https://github.com/jakepgoldman/">learning new things,</a> and <a href="https://instagram.com/oggoldmon">going to new places.</a></p>
      </div>
    </div>
  </div>

  <div class="buttons marg-bot-05">
    <a href="/projects" class="btn btn-primary marg-bot-05">
      View my projects
    </a>
    <a href="/posts" class="btn btn-primary marg-bot-05">
      Read my posts
    </a>
  </div>
</div>

<!-- Education -->
<div class="marg-bot-2">
  <h4 class="title">Education</h4>
  {{#each education}}
    {{> education this}}
  {{/each}}
</div>

<!-- Experience -->
<div class="marg-bot-2">
  <h4 class="title">Experience</h4>
  {{#each experiences}}
    {{> experience this}}
  {{/each}}
  <a href="/files/resume.pdf" class="btn btn-primary" target="_BLANK">
    View my resume →
  </a>
</div>

<!-- Recent projects -->
{{#if projects}}
  <div>
    <h4 class="title">Recent Projects</h4>
    {{#each projects}}
      {{> project this}}
    {{/each}}
  </div>
  <a href="/projects" class="btn btn-primary marg-bot-1">
    View projects
  </a>
{{/if}}

<!-- Technologies -->
<div class="marg-bot-2">
  <h4 class="title">Technologies</h4>

  <div class="card">
    <div class="row">
      <div class="col-12 col-md-6">
        <h5>General Purpose</h5>
        <p>
          Java, Python, C, Scala.
        </p>

        <h5>Web</h5>
        <p>
          React, Redux, HTML, CSS.
        </p>

        <h5>Mobile</h5>
        <p>
          React Native.
        </p>
      </div>

      <div class="col-12 col-md-6">
        <h5>Databases &amp; Deployment</h5>
        <p>
          MongoDB, SQL, AWS (DynamoDB), Heroku.
        </p>

      </div>
    </div>
  </div>

  <a href="/projects" class="btn btn-primary">
    Check out my projects →
  </a>
</div>

<!-- Extracurriculars -->
<div>
  <h4 class="title">Extracurriculars</h4>
  {{#each extracurriculars}}
    {{> extracurricular this}}
  {{/each}}
</div>
