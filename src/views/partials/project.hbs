<div class="project" style="background: {{this.color}}">
  <div class="text">
    <h2>{{this.title}}</h2>
    <p>{{this.description}}</p>
    <p><strong>Technologies:</strong> {{this.technologies}}.</p>
    <div class="buttons">
      {{#if this.link}}
        <a class="btn btn-sm" href="{{this.link}}">
          View here
        </a>
      {{/if}}
      {{#if this.repo}}
        <a class="btn btn-sm" href="{{this.repo}}">
          View repo
        </a>
      {{/if}}
    </div>
  </div>
  <div class="screenshot-wrapper">
    {{#if this.desktopImage}}
    <img src="/img/projects/{{this.desktopImage}}" alt="{{this.title}}" class="rounded" style="margin-bottom:25px;" />
    {{/if}}
    {{#if this.mobileImage}}
      <img src="/img/projects/{{this.mobileImage}}" alt="{{this.title}}" class="img-fluid" style="width:35%; margin:0px 10px 25px 25px;"/>
      <img src="/img/projects/{{this.mobileImage1}}" alt="{{this.title}}" class="img-fluid" style="width:35%; margin:0px 25px 25px 0px;"/>
    {{/if}}
  </div>
</div>
